// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

type Verification {
  status       Boolean
  token        String
  tokenExpires DateTime
}

type PasswordReset {
  token        String
  tokenExpires DateTime
}

type TwoFactorAuthenticationMethod {
  enabled      Boolean
  token        String
  tokenExpires DateTime
}

type TwoFactorAuthentication {
  email TwoFactorAuthenticationMethod
  totp  TwoFactorAuthenticationMethod
}

model User {
  id String @id @default(uuid()) @map("_id")

  name     String
  lastname String

  username String @unique
  email    String @unique
  password String

  profile String
  banner  String

  verification            Verification
  twoFactorAuthentication TwoFactorAuthentication
  passwordReset           PasswordReset?

  @@map("users")
}

type Location {
  contry String
  region String
}

type Device {
  ip       String
  location Location
}

type Payload {
  sub String
  iat Int
  exp Int
}

model jwt {
  id      String  @id @default(uuid()) @map("_id")
  jwt     String
  payload Payload
  device  Device
  enabled Boolean @default(true)
}
